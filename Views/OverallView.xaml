<UserControl x:Class="Recycle.Views.OverallView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Recycle.Views"
             xmlns:ctrl="clr-namespace:Recycle.UserControls"
             mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="0,12">
            <UniformGrid Style="{StaticResource styleUniformGridMain}" Rows="0">
                <Border Style="{StaticResource styleWhiteBorder}" Height="332">
                    <local:RobotHistogram/>
                </Border>
                <Border Style="{StaticResource styleWhiteBorder}" Height="332">
                    <local:RobotPicks/>
                </Border>
                <Border Style="{StaticResource styleWhiteBorder}" Height="332">
                    <TextBlock Style="{StaticResource styleTextHeader}" Text="inspection schedule"/>
                </Border>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
